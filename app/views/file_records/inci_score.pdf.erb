 <style type="text/css">
.my_table{
  border: 2px solid;
  width:100%;
}
.my_table td{
  padding-left: 2px;
  border: 1px solid;
}
.my_table th{
  padding-left: 2px;
  border: 2px solid;
}
    </style>
<table class="table table-bordered my_table">
	<thead>
		<tr>
			<th>Product(s)</th>
			<th>Score</th>
			<th>UnRecognized Inci</th>
			<th>Composition</th>
			<th>Reference</th>
		</tr>
	</thead>
	<tbody>
		<%@inci_records.each do |inci_record|%>
			<tr>
				<td><%=inci_record.product%></td>
				<td><%=inci_record.score%></td>
				<td><%=inci_record.unrecognized_inci.join(",")%></td>
				<td><%=inci_record.composition%></td>
				<td><%=inci_record.reference%></td>
			</tr>
		<%end%>
	</tbody>
</table>